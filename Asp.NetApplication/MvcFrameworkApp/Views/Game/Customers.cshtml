@model List<Shared.Models.UserModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Games</title>
</head>
<body>
    <table class="table table-bordered table-hover">
        <tr><th>Customer Name</th><th>Membership Type</th><th>Birthdate</th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td>There are no customers.</td></tr>
        }

        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.ActionLink(customer.FirstName, "GetCustomer", new { customerId = customer.Id })</td>
                <td>@customer.MembershipType.Name</td>
                @if (customer.Birthdate != default(DateTime))
                {
                    <td>@customer.Birthdate</td>
                }
                else
                {
                    <td>N/A</td>
                }
            </tr>
        }
    </table>
</body>
</html>
