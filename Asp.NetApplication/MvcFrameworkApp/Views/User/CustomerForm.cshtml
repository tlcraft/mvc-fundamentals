@model MvcFrameworkApp.Models.CustomerFormViewModel
@{
    ViewBag.Title = "CustomerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.UserModel != null && Model.UserModel.Id > 0)
{
    <h2>Edit</h2>
}
else
{
    <h2>New</h2>
}

@using (Html.BeginForm("Save", "User"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.UserModel.FirstName)
        @Html.TextBoxFor(m => m.UserModel.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UserModel.LastName)
        @Html.TextBoxFor(m => m.UserModel.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UserModel.Birthdate)
        @Html.EditorFor(m => m.UserModel.Birthdate, new { @class = "form-control", @type = "date" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UserModel.MembershipType)
        @Html.DropDownListFor(m => m.UserModel.MembershipType.Id, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.UserModel.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}